{
    "rules": [
      {
        "name": "XSS",
        "pattern": "<[^>]*>\\s*\\${.*?}",
        "description": "Detects potential Cross-Site Scripting (XSS) vulnerabilities"
      },
      {
        "name": "SQL Injection",
        "pattern": "(SELECT|INSERT|UPDATE|DELETE|CREATE|DROP|ALTER)\\s+.*?(?:[^'\\\\]|(?:''))*",
        "description": "Detects potential SQL Injection vulnerabilities"
      },
      {
        "name": "Direct Response Write",
        "pattern": "(res\\.send\\s*\\(|res\\.write\\s*\\()\\s*['\"`].*?\\$\\{.*?\\}.*?['\"`]",
        "description": "Detects direct response writes with potentially tainted data"
      }
    ]
  }
  